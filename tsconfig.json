{
    "buildOnSave": false,
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./test/**/*.ts",
        "./test/**/*.tsx",
        "./scripts/**/*.ts",
        "./typings/**/*.d.ts",
        "./typings/index.d.ts",
        "./node_modules/intern/typings"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
